@model yard_management_system.Models.Order

@{
    ViewData["Title"] = "Būsenos keitimas";
}

<h2>Keisti būseną</h2>

<h4>Užsakymas nr. @Model.ID</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="State" class="control-label">Būsena</label>
                <select asp-for="State" class="form-control" asp-items="Html.GetEnumSelectList<Order.OrderState>()"></select>
                <span asp-validation-for="State" class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="ID" />
            <input type="hidden" asp-for="CreationDate" />
            <input type="hidden" asp-for="UserCreatorID" />
            <div class="form-group">
                <input type="submit" value="Išsaugoti" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Grįžti į sąrašą</a>
</div>

