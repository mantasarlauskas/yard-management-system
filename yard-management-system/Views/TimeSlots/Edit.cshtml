@model yard_management_system.Models.TimeSlot

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<h4>TimeSlot</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="TimeSlotID" />
            <div class="form-group">
                <label asp-for="Date" class="control-label"></label>
                <input asp-for="Date" class="form-control" />
                <span asp-validation-for="Date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TimeFrom" class="control-label"></label>
                <input asp-for="TimeFrom" class="form-control" />
                <span asp-validation-for="TimeFrom" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TimeDuration" class="control-label"></label>
                <input asp-for="TimeDuration" class="form-control" />
                <span asp-validation-for="TimeDuration" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TypeOfTimeSlot" class="control-label"></label>
                <select asp-for="TypeOfTimeSlot" class="form-control"></select>
                <span asp-validation-for="TypeOfTimeSlot" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="Reserved" /> @Html.DisplayNameFor(model => model.Reserved)
                    </label>
                </div>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="Blocked" /> @Html.DisplayNameFor(model => model.Blocked)
                    </label>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="RampID" class="control-label"></label>
                <select asp-for="RampID" class="form-control" asp-items="ViewBag.RampID"></select>
                <span asp-validation-for="RampID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

