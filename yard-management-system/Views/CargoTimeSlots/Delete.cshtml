@model yard_management_system.Models.CargoTimeSlot

@{
    ViewData["Title"] = "Ištrynimas";
}

<h2>Ištrynimas</h2>

<h3>Ar tikrai norite pašalinti šį laiką?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Tipas
        </dt>
        <dd>
            @Html.DisplayFor(model => model.TimeSlot.TypeOfTimeSlot)
        </dd>
        <dt>
            Data
        </dt>
        <dd>
            @Model.TimeSlot.Date.ToString("yyyy-MM-dd")
        </dd>
        <dt>
            Laikas nuo
        </dt>
        <dd>
            @Html.DisplayFor(model => model.TimeSlot.TimeFrom)
        </dd>
        <dt>
            Laiko trukmė
        </dt>
        <dd>
            @Html.DisplayFor(model => model.TimeSlot.TimeDuration)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="ID" />
        <input type="submit" value="Trinti" class="btn btn-default" /> |
        <a asp-controller="Cargoes" asp-action="Details" asp-route-id="@Model.CargoID">Grįžti į krovinio informaciją</a>
    </form>
</div>
