@model yard_management_system.Models.CargoTimeSlot
@{
    ViewData["Title"] = "Laiko pridėjimas";
}

<h2>Pridėti krovinio aptarnavimo laiką</h2>

<h4>Krovinys nr. @ViewData["ID"]</h4>
<hr />
@if ((int)ViewData["count"] > 0) {
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Create" asp-route-id="@ViewData["ID"]">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="TimeSlotID" class="control-label">Laikas</label>
                    <select asp-for="TimeSlotID" class="form-control" asp-items="ViewBag.TimeSlotID"></select>
                    <span asp-validation-for="TimeSlotID" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Išsaugoti" class="btn btn-default" />
                </div>
            </form>
        </div>
    </div>
}
else
{
    <div class="alert alert-danger">Laikų, kuriuos butų galima priskirti kroviniui, šiuo metu nėra</div>
}

<div>
    <a asp-controller="Cargoes" asp-action="Details" asp-route-id="@ViewData["ID"]">Grįžti į krovinio informaciją</a>
</div>

